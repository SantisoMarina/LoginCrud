    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/SourcesHome/vendor/perfect-scrollbar/perfect-scrollbar.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/SourcesHome/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/SourcesHome/css/main.css">

    <!--===============================================================================================-->

    <script>
        function ShowMessage() {
            var result = confirm("Do your want to submit form?");
            if (result) {
                return true;
            } else {
                return false;
            }
        }
    </script>

</head>

<body>

    @if (Request.Cookies["usuario"] == null)
    {
        <div class="container-table100 mt-5">
            <button type="button" class="btn-grad text-center" onclick="window.location.href = '@Url.Action("InicioSesion", "Usuario")';">NO PUEDE VER ESTO SI NO INICIA SESIÓN</button>
        </div>
    }
    else
    {
        <div class="container-table100 mt-5">




            <div class="wrap-table100 mt-5">



                @using (Html.BeginForm("ListadoPersonas", "Usuario", FormMethod.Get))
                {
                    <p>
                        Buscar por nombre y apellido: @Html.TextBox("SearchString")
                        <input type="submit" value="Search" />
                    </p>
                }




                <div class="table100">

                    <table>
                        <thead>
                            <tr class="table100-head">
                                <th class="column1"> @Html.ActionLink("ID Persona", "ListadoPersonas", "Usuario", new { orden = "id", ordenamiento = ViewBag.ordenamiento }, null)</th>
                                <th class="column2"> @Html.ActionLink("Nombre", "ListadoPersonas", "Usuario", new { orden = "nombre", ordenamiento = ViewBag.ordenamiento }, null)</th>
                                <th class="column3"> @Html.ActionLink("Apellido", "ListadoPersonas", "Usuario", new { orden = "apellido", ordenamiento = ViewBag.ordenamiento }, null)</th>
                                <th class="column4">Provincia</th>
                                <th class="column5"> @Html.ActionLink("Usuario", "ListadoPersonas", "Usuario", new { orden = "usuario", ordenamiento = ViewBag.ordenamiento }, null)</th>
                                <th class="column6"> @Html.ActionLink("Email", "ListadoPersonas", "Usuario", new { orden = "email", ordenamiento = ViewBag.ordenamiento }, null)</th>
                                <th class="column6">Modificar/Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var persona in Model)
                            {
                                <tr>
                                    <td class="column1">@persona.id_persona</td>
                                    <td class="column2">@persona.nombre</td>
                                    <td class="column3">@persona.apellido</td>
                                    <td class="column5">@persona.provincia</td>
                                    <td class="column6">@persona.usuario</td>
                                    <td class="column4">@persona.email</td>


                                    <td class="column7 text-center">
                                        <a href="@Url.Action("ActualizarDatos","Usuario", new { @id_persona = persona.id_persona })"><img src="~/SourcesHome/images/pencil.png" /></a>
                                        <a href="@Url.Action("eliminarUsuario","Usuario", new { @id_persona = persona.id_persona })"><img src="~/SourcesHome/images/trash-bin.png" /></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    <br />
                    <button type="button" class="btn-grad text-center" onclick="window.location.href = '@Url.Action("PDF", "Reporte")';">Descargar PDF</button>
                </div>

            </div>

        </div>




    }
</body>


