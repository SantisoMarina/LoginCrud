@model IEnumerable<PGMCLIP.ViewModels.PersonaVM>
@{
    ViewBag.Title = "ListadoPersonas";
    Layout = "~/Views/Shared/_Layout-Home.cshtml";
}



<!DOCTYPE html>
<html lang="en">

<head>

    <title>Listado de Personas</title>


    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/SourcesHome/vendor/bootstrap/css/bootstrap.min.css">

    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/SourcesHome/vendor/animate/animate.css">
    <!--===============================================================================================-->
