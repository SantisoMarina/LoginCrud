@model PGMCLIP.Models.ParametroConfiguracion

@{
    ViewBag.Title = "Registro de Usuario";
    Layout = "~/Views/Shared/_Layout-Login.cshtml";

    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}

<html>
<head>
    <title>Actualizar parámetro </title>

    <meta name="viewport" content="width=device-width, initial-scale=1">


</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Sources/images/Update-pana.png" alt="Imagen decorativa de una actualización" style="margin-top:30%">
                </div>

                @using (Html.BeginForm())
                {
            <form class="login100-form validate-form" id="Registro">
                <span class="login100-form-title">
                    <h1>Actualizar parámetro <br /> @ViewBag.nombreParametro </h1>
                </span>

                <label for="codigo" class="txt2">Código</label>
                <div class="wrap-input100 validate-input" data-validate="-">
                    @Html.TextBoxFor(model => model.codigo_parametro, htmlAttributes: new { @class = "input100 second", type = "text", @id = "codigo_parametro", name = "codigo_parametro", placeholder = "codigo_parametro", @readonly = "true" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <label for="nombre" class="txt2">Nombre</label>
                <div class="wrap-input100 validate-input" data-validate="-">
                    @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "input100 second", type = "text", @id = "nombre", name = "nombre", placeholder = "nombre", @readonly = "true" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>


                <label for="valor" class="txt2">Valor</label>
                <div class="wrap-input100 validate-input" data-validate="Ingrese un usuario">
                    @Html.TextBoxFor(model => model.valor, htmlAttributes: new { @class = "input100 second", type = "text", @id = "valor", name = "valor", placeholder = "valor", oninvalid = "this.setCustomValidity('Ingrese un valor')", oninput = "setCustomValidity('')" })
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>

                <label for="nombrePersona" class="txt2">Habilitado</label>
                <div class="wrap-input100 validate-input" data-validate="Seleccione algo, por favor">

                    @Html.RadioButtonFor(model => model.habilitado, true, new { @class = "form-check-input", id = "habilitado" })
                    @Html.Label("habilitado", "Habilitado", new { @class = "form-check-label" })

                    @Html.RadioButtonFor(model => model.habilitado, false, new { @class= "form-check-input", id = "nohabilitado" })
                    @Html.Label("nohabilitado", "No Habilitado", new { @class = "form-check-label" })
                    <span class="focus-input100"></span>
                    
                </div>


                <span class="focus-input100"></span>
                <div class="container-login100-form-btn">
                    <input type="submit" class="login100-form-btn" value="Actualizar parámetro" :focus>
                </div>



                <div class="text-center p-t-50">
                    <a class="txt1" href="#" title="Página Principal" aria-label="Página Principal">
                        @Html.ActionLink("Volver al listado de parámetros", "ListadoParametros", "Configuracion")

                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
                }
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/Sources/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Sources/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Sources/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Sources/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Sources/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Sources/js/main.js"></script>

</body>
</html>